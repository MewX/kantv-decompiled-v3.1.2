<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@color/white" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/common_title_layout" />
    <LinearLayout android:gravity="center_vertical" android:id="@id/message_received" android:background="@color/white" android:layout_width="fill_parent" android:layout_height="@dimen/height_80" android:layout_marginTop="@dimen/space_12">
