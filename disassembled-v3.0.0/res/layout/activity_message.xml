        <ImageView android:layout_marginRight="@dimen/space_15" android:src="@drawable/arrow_gray" style="@style/w_wh_w" />
    </LinearLayout>
    <LinearLayout android:gravity="center_vertical" android:id="@id/message_send" android:background="@color/white" android:layout_width="fill_parent" android:layout_height="@dimen/height_80" android:layout_marginTop="@dimen/space_12">
