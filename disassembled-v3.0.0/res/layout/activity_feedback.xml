<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@color/recommend_line_gray" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/common_title_layout" />
    <LinearLayout android:gravity="center_vertical" android:id="@id/feedback_type_ll" android:background="@color/white" style="@style/wh2.linear2">
        <TextView android:textSize="@dimen/txt_size_16sp" android:textColor="@color/cursor_color" android:id="@id/feedback_type_tv" android:padding="@dimen/space_15" android:text="反馈类型" android:layout_weight="1.0" style="@style/w_wh_w" />
        <TextView android:textSize="@dimen/txt_size_16sp" android:textColor="@color/temp_tv_color" android:id="@id/feedback_type" android:padding="@dimen/space_15" android:text="意见反馈" style="@style/w_wh_w" />
        <ImageView android:layout_marginRight="@dimen/space_15" android:src="@drawable/arrow_gray" style="@style/wh1" />
