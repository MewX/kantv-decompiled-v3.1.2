    <EditText android:textSize="@dimen/txt_size_16sp" android:textColor="@color/cursor_color" android:gravity="top" android:id="@id/feedback_edit" android:background="@color/white" android:padding="@dimen/space_15" android:layout_width="fill_parent" android:layout_height="@dimen/height_100" android:layout_marginTop="@dimen/space_10" android:hint="请填写你想要反馈的问题" android:maxLength="100" />
    <EditText android:textSize="@dimen/txt_size_16sp" android:textColor="@color/cursor_color" android:id="@id/forum_mail" android:background="@color/white" android:padding="@dimen/space_15" android:layout_width="fill_parent" android:layout_marginTop="@dimen/space_10" android:hint="请留下您的邮箱，方便我们联系你" android:singleLine="true" style="@style/w_wh_w" />
</LinearLayout>