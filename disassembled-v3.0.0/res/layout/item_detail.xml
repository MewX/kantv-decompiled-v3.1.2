        <TextView android:textSize="@dimen/txt_size_12sp" android:textColor="@color/temp_tv_color" android:ellipsize="end" android:id="@id/item_detail_tag" android:layout_marginTop="@dimen/space_07" android:layout_marginRight="@dimen/space_15" android:text="电影 | 内地 | 2015年" android:maxLines="1" android:layout_toRightOf="@id/item_detail_img_rl" android:layout_below="@id/item_detail_title_ll" style="@style/w_wh_w" />
