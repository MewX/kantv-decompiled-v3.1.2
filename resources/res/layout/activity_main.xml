<?xml version="1.0" encoding="utf-8"?>
<com.kantv.ui.view.CustomDrawerLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/root" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <FrameLayout android:id="@+id/main_fl" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/ll_bottom" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ll_movie_histroy" android:background="@color/color_F0F0F0" android:visibility="gone" android:layout_width="match_parent" android:layout_height="60dp">
                    <ImageView android:id="@+id/iv_src" android:layout_width="60dp" android:layout_height="match_parent" android:scaleType="fitCenter"/>
                    <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="15dp" android:layout_weight="1">
                        <TextView android:textSize="15sp" android:textColor="@color/color_222222" android:ellipsize="end" android:id="@+id/tv_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1"/>
                        <TextView android:textSize="12sp" android:textColor="@color/color_888888" android:ellipsize="end" android:id="@+id/tv_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:maxLines="1"/>
                    </LinearLayout>
                    <ImageView android:id="@+id/iv_play" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:src="@drawable/icon_play"/>
                    <ImageView android:id="@+id/iv_close" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:src="@drawable/icon_close"/>
                </LinearLayout>
                <View android:id="@+id/tab_line" android:background="@color/color_eeeeee" android:layout_width="match_parent" android:layout_height="0.3dp"/>
                <com.kantv.ui.view.CustomFragmentTabHost android:id="@+id/act_main_ftb" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <FrameLayout android:id="@android:id/tabcontent" android:background="#e6ffffff" android:layout_width="0dp" android:layout_height="0dp"/>
                </com.kantv.ui.view.CustomFragmentTabHost>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <ImageView android:layout_gravity="left" android:id="@+id/ad_img" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/welcome_head" android:scaleType="centerCrop"/>
</com.kantv.ui.view.CustomDrawerLayout>
