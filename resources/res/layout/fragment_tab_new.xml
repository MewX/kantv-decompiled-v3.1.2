<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:paddingTop="@dimen/space_20" android:layout_width="match_parent" android:layout_height="@dimen/tab_height">
        <com.kantv.lib.indicator.ScrollIndicatorView android:id="@+id/moretab_new_indicator" android:paddingLeft="@dimen/space_15" android:paddingTop="@dimen/space_09" android:paddingRight="@dimen/space_35" android:paddingBottom="@dimen/space_09" android:layout_width="match_parent" android:layout_height="@dimen/tab_top_height"/>
        <ImageView android:layout_gravity="right|center_vertical|center_horizontal|center" android:layout_width="@dimen/space_80" android:layout_height="@dimen/tab_top_height" android:src="@drawable/nav_bg_white"/>
    </FrameLayout>
    <RelativeLayout android:background="@color/white" android:paddingBottom="@dimen/tab_base_height" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/search_rl" android:paddingBottom="7dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.kantv.ui.view.CircleImageView android:id="@+id/mine_head" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginLeft="15dp" android:src="@drawable/avatar" android:layout_centerVertical="true"/>
            <LinearLayout android:gravity="center" android:id="@+id/ll_search" android:background="@drawable/shape_news_bg" android:layout_width="0dp" android:layout_height="30dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_weight="1" android:layout_toRightOf="@+id/mine_head">
                <TextView android:textSize="@dimen/txt_size_14sp" android:textColor="#b2b2b2" android:gravity="center" android:id="@+id/tv_search" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="搜索" android:drawableLeft="@drawable/zoom_grey" android:drawablePadding="@dimen/space_06"/>
            </LinearLayout>
            <ImageView android:id="@+id/iv_save" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_save"/>
            <ImageView android:id="@+id/iv_histroy" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:src="@drawable/icon_histroy"/>
        </LinearLayout>
        <androidx.viewpager.widget.ViewPager android:id="@+id/tab_new_viewPager" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/search_rl"/>
    </RelativeLayout>
</LinearLayout>
