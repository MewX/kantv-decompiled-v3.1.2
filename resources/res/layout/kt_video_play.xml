<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/videoplayer_rl" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <TextView android:textSize="@dimen/txt_size_16sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/videoplayer_errortext" android:background="@color/black" android:paddingLeft="@dimen/space_15" android:paddingRight="@dimen/space_15" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_centerInParent="true"/>
        <com.kantv.video.KTVideoPlayer android:id="@+id/ktv_videoplayer" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <FrameLayout android:id="@+id/shareUnlock" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView android:layout_gravity="center" android:id="@+id/shareImg" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/placeholder2" android:scaleType="centerCrop"/>
            <ImageView android:layout_gravity="left" android:id="@+id/shareDelImg" android:padding="@dimen/space_25" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/video_back"/>
        </FrameLayout>
        <FrameLayout android:id="@+id/loginRegUnlock" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
            <View android:background="@color/black" android:layout_width="match_parent" android:layout_height="match_parent" android:alpha="0.7"/>
            <ImageView android:layout_gravity="left" android:id="@+id/loginRegBack" android:padding="@dimen/space_25" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/video_back"/>
            <ImageView android:layout_gravity="center" android:id="@+id/loginRegImg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/login_reg_unlock"/>
        </FrameLayout>
    </RelativeLayout>
</LinearLayout>
