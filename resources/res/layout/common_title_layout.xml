<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" style="@style/wh_w">
    <RelativeLayout android:id="@+id/common_title_rl" android:layout_width="match_parent" android:layout_height="@dimen/height_40" android:layout_marginTop="@dimen/space_15">
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/title_left_ll" android:visibility="invisible" android:layout_width="@dimen/width_40" android:layout_height="match_parent" android:layout_marginLeft="@dimen/space_15">
            <ImageView android:id="@+id/title_leftimg" android:layout_width="@dimen/width_11" android:layout_height="@dimen/height_18" android:src="@drawable/back" android:layout_centerVertical="true"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_centerHorizontal="true">
            <TextView android:textSize="22sp" android:textColor="@color/cursor_color" android:ellipsize="end" android:id="@+id/common_title_tv" android:text="@string/app_name" android:maxLength="12" style="@style/w_wh_w"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/title_right_ll" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="@dimen/space_20" android:layout_alignParentRight="true">
            <ImageView android:id="@+id/title_rightimg" android:src="@drawable/delete" android:layout_alignBaseline="@+id/common_title_tv" style="@style/w_wh_w"/>
            <TextView android:textSize="@dimen/txt_size_18sp" android:textColor="#ff888888" android:id="@+id/tv_right" android:visibility="gone" android:text="Edit" android:layout_alignBaseline="@+id/common_title_tv" style="@style/w_wh_w"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/container" android:visibility="gone" android:layout_marginTop="@dimen/height_40" style="@style/w_mh_m"/>
</RelativeLayout>
